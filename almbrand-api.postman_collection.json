					},
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{subscription-key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": "{{api_url}}/customer/agreements/{{agreement_line_seq_no}}/pdf"
			},
			"response": []
		}
	]
